{% extends 'header.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div id="hero" class="hero-section">
    <img src="{{ asset('assets/styles/images/monkey-4164889_1280.jpg') }}" alt="Description de l'image">
    <div class="hero-content">
        <h1>Contactez-nous</h1>
    </div>
  </div>
  <section id="contact" class="contact section">
        <h2>Contact</h2>
    <!-- Section Title -->
    <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        
        <p>Nous serions ravis de recevoir vos questions ou vos commentaires. Remplissez le formulaire ci-dessous pour nous contacter.</p>
    </div><!-- End Section Title -->

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-6 ">

                <div class="info-wrap">
                    <div class="info-item d-flex aos-init aos-animate">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Adresse</h3>
                            <p>Forêt de Brocéliande,35380 Paimpont</p>
                        </div>
                    </div>

                    <div class="info-item d-flex aos-init aos-animate">
                        <i class="bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>Appelez-nous</h3>
                            <p>0610101010</p>
                        </div>
                    </div>

                    <div class="info-item d-flex aos-init aos-animate">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>Email</h3>
                            <p>info@zoodarcadia.fr</p>
                        </div>
                    </div>

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1188.7711478581548!2d-2.17253145268902!3d48.01948880879243!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x480faceab3587495%3A0xcdc883e818be2eb2!2sLa%20for%C3%AAt%20de%20Broc%C3%A9liande!5e0!3m2!1sfr!2sfr!4v1720005461948!5m2!1sfr!2sfr" width="100%" height="270px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>

            <div class="col-lg-6"> 
                {{ form_start(form, { 'attr': { 'class': 'php-email-form aos-init aos-animate', 'data-aos': 'fade-up', 'data-aos-delay': '200' } }) }}
                    <div class="row">
            
                        <div class="col-md-6">
                            {{ form_row(form.nom, {'label_attr': { 'class': 'custom-label' }, 'attr': { 'class': 'form-control', 'placeholder': 'Votre nom' } }) }} 
                        </div>
            
                        <div class="col-md-6">
                            {{ form_row(form.email, { 'label_attr': { 'class': 'custom-label' },'attr': { 'class': 'form-control', 'placeholder': 'Votre adresse e-mail' } }) }}
                        </div>
            
                        <div class="col-md-12">
                            {{ form_row(form.sujet, {'label_attr': { 'class': 'custom-label' }, 'attr': { 'class': 'form-control', 'placeholder': 'Sujet du message' } }) }}
                        </div>
            
                        <div class="col-md-12">
                            {{ form_row(form.message, {'label_attr': { 'class': 'custom-label' }, 'attr': { 'class': 'form-control', 'placeholder': 'Votre message', 'rows': 10 } }) }}
                        </div>
            
                        <div class="col-md-12 text-center">
                            <div class="error-message">{{ form_errors(form) }}</div>
                            <div class="sent-message">{{ app.flashes('success')[0] ?? '' }}</div>
            
                            {{ form_row(form.send, { 'attr': { 'class': 'btn' } }) }}
                        </div>
            
                    </div>
                {{ form_end(form) }}
            </div>
            

        </div>

    </div>

</section>
{% include 'footer.html.twig' %}
{% endblock %}
